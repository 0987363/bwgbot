# .env 文件
# Telegram Bot配置
BOT_TOKEN=

# 自动报告调度 - 支持具体时间点
# 格式:
# 1. 每天: daily:HH:MM (例: daily:09:00)
# 2. 每周: weekly:DAY:HH:MM 或 DAY:HH:MM (例: weekly:MON:09:00 或 MON:09:00)
# 3. 每月: monthly:DD:HH:MM 或 DD:HH:MM (例: monthly:06:09:00 或 06:09:00)
# 支持的星期: MON, TUE, WED, THU, FRI, SAT, SUN
AUTO_REPORT_SCHEDULE=daily:09:00

# 服务器配置
# VEID为7位数字，API_Key为privated_开头字符串
BWG1_VEID=
BWG1_API_KEY=private_

BWG2_VEID=
BWG2_API_KEY=private_

BWG3_VEID=
BWG3_API_KEY=private_

# 群组配置 (群组ID或用户ID:服务器列表)
# 格式: GROUP_ID=server1,server2,server3
# 支持群组(负数ID)和用户(正数ID)
GROUP_CONFIG_4=-1001234567893:bwg1  # 群组示例
GROUP_CONFIG_5=123456789:bwg2,bwg3  # 用户示例
